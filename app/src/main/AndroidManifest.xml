<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andriukhov.mymovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="MoviesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMovies">
        <activity
            android:name="MainActivityNav"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyMovies.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>